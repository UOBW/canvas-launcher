<!--
    Background colors for the generation of contact icons.
    All values here are from the colors.xml file of the LineageOS Contacts app.
    The commented out references are the original definition, but they don't seem to work on older Android versions, so I replaced them with their values
    (https://github.com/LineageOS/android_packages_apps_Contacts/blob/lineage-21.0/res/values/colors.xml)
-->

<resources>
    <array name="letter_tile_colors">
        <item>#94AAE4</item> <!-- @*android:color/system_accent1_300 -->
        <item>#A4ABC1</item> <!-- @*android:color/system_accent2_300 -->
        <item>#C3A0C1</item> <!-- @*android:color/system_accent3_300 -->
        <item>#7A90C8</item> <!-- @*android:color/system_accent1_400 -->
        <item>#8A90A5</item> <!-- @*android:color/system_accent2_400 -->
        <item>#A886A6</item> <!-- @*android:color/system_accent3_400 -->
        <item>#6076AC</item> <!-- @*android:color/system_accent1_500 -->
        <item>#70778B</item> <!-- @*android:color/system_accent2_500 -->
        <item>#8C6D8C</item> <!-- @*android:color/system_accent3_500 -->
        <item>#475D92</item> <!-- @*android:color/system_accent1_600 -->
        <item>#575E71</item> <!-- @*android:color/system_accent2_600 -->
        <item>#725572</item> <!-- @*android:color/system_accent3_600 -->
    </array>
    <color name="letter_tile_default_color">#cccccc</color>
</resources>
